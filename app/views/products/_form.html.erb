<%= simple_form_for(@product, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>


    <%= f.input :name, required: true, label: false, placeholder: "Product Name", input_html: {class: "form-control"} %>
    <%= f.input :description, required: true, label: false, placeholder: "Description", input_html: {class: "form-control", rows: 5}
    %>
    <%= f.input :price, required: true, label: false, placeholder: "Price", input_html: {class: "form-control"}  %>
    <%= f.input :points, required: true, label: false, placeholder: "Karma Points", input_html: {class: "form-control"}  %>
    <%= f.input :image %>
   
    <div class="checkbox text-center">
    <p>Published?</p>
    <%= f.input :availability, required: false, label: false  %>
 </div>


    <%= f.button :submit, class: "btn btn-primary btn-block" %>

<% end %>
